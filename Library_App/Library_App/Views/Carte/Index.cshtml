@model IEnumerable<Library_App.Models.Carte>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista cărților</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Adaugă carte</a>
</p>

<div class="form-group mb-3 row align-items-center">
    <div class="col-sm-3">
        <form asp-action="FiltrarePret" method="post">
            <button type="submit" class="btn btn-primary">Cărți cu prețul între 150 și 500</button>
        </form>
    </div>
    <div class="col-sm-3">
        <form asp-action="FiltrareAutor" method="post">
            <button type="submit" class="btn btn-primary">Cărți ale autorului cu consoană</button>
        </form>
    </div>
    <div class="col-sm-2">
        <form asp-action="FiltrarePretMaximal" method="post">
            <button type="submit" class="btn btn-primary">Cărți cu prețul maximal</button>
        </form>
    </div>
    <div class="col-sm-2">
        <form asp-action="Index" method="post">
            <button type="submit" class="btn btn-danger">Resetează</button>
        </form>
    </div>
</div>

<div class="container mt-5">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <img src="~/img/@item.Imagine" style="height: 300px; object-fit: contain" />
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">@item.Titlu</h3>
                        <div class="row flex-row">
                            <p>Autor: @item.Autor</p>
                            <p>Editor: @item.Editor</p>
                            <p>Preț: @item.Pret lei</p>
                        </div>
                        <div class="d-flex flex-row">
                            <p><a asp-action="Edit" asp-route-id="@item.CodCarte" class="btn btn-primary">Edit</a></p>
                            <p><a asp-action="Details" asp-route-id="@item.CodCarte" class="btn btn-info mx-2">Details</a></p>
                            <p><a asp-action="Delete" asp-route-id="@item.CodCarte" class="btn btn-danger">Delete</a></p>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

